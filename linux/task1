#!/bin/bash

# Function to validate if input is a number
is_number() {
    local input="$1"
    [[ "$input" =~ ^[0-9]+$ ]]
}

# Prompt for user input
echo "Enter your name:"
read name

echo "Enter your age:"
read age

# Validate age input
if is_number "$age"; then
    echo "Hello, $name. You are $age years old."
else
    echo "Invalid age. Please enter a numerical value."
fi
